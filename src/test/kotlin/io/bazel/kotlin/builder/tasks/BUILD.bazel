    name = "KotlinBuilderJvmKaptTest",
    srcs = ["jvm/KotlinBuilderJvmKaptTest.java"],
    data = [
        _AUTO_VALUE_JAR,
        _AUTO_VALUE_ANNOTATIONS_JAR,
    ],
    jvm_flags = [
        "-Dauto_value=$(location %s)" % _AUTO_VALUE_JAR,
        "-Dauto_value_annotations=$(location %s)" % _AUTO_VALUE_ANNOTATIONS_JAR,
